<Window x:Class="WPFSkins.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFSkins"
        mc:Ignorable="d"
        Title="Steven Alspach" Height="450" Width="800">
    <StackPanel ><!--Style="{StaticResource Main Stack Panel}"-->
        <Label ><!--Style="{StaticResource Title Label}"-->
            WPF 4.5 Unleashed
        </Label>
        <Label>© 2013 SAMS Publishing</Label>
        <Label>Installed Chapters:</Label>
        <ListBox>
            <ListBoxItem>Chapter 1</ListBoxItem>
            <ListBoxItem>Chapter 2</ListBoxItem>
        </ListBox>
        <StackPanel  ><!--Style="{StaticResource Help/Ok Button Stack Panel}"-->
            <Button>Help</Button>
            <Button>OK</Button>
        </StackPanel>
        <StatusBar>You have successfully registered this product.</StatusBar>
        <UniformGrid Rows="1">
            <Button Click="Style_Button1_Click">Style 1</Button>
            <Button Click="Style_Button2_Click">Style 2</Button>
            <Button Click="Style_Button3_click">Style 3</Button>
            <Button Click="Style_Button4_click">Style 4</Button>
        </UniformGrid>
    </StackPanel>
</Window>
